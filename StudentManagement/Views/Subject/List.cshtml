@model StudentManagement.Models.Subject

@{
    ViewData["Title"] = "Add Subject";
}

<h2>Add Subject</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Class"></label>
        <input asp-for="Class" class="form-control" />
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Languages">Languages (comma-separated)</label>
        <input asp-for="Languages" class="form-control" />
        <span asp-validation-for="Languages" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId">Teacher</label>
        <select asp-for="TeacherId" class="form-control">
            <option value="">Select a teacher</option>
            @foreach (var teacher in ViewBag.Teachers)
            {
                <option value="@teacher.Id">@teacher.Name</option>
            }
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
